<div class="post-card {{#unless feature_image}} no-image{{/unless}}">
    <div class="post-card__wrapper">
        <a href="{{url}}"><h2 class="post-card__title">{{title}}</h2></a>
        {{#if feature_image}}
            <a href="{{url}}" class="post-card__image">
                <img
                    srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 600w,
                            {{img_url feature_image size="l"}} 1000w,
                            {{img_url feature_image size="xl"}} 2000w"
                    sizes="700px"
                    src="{{img_url feature_image size="m"}}"
                    alt="{{title}}"
                />
            </a>
        {{/if}}
        <div class="post-card__content">
            <p class="post-card__excerpt">{{excerpt words="27"}}</p>
            <div class="post-card__meta">
                {{#if primary_tag}}
                    <div class="post-card__tags">
                        # <a href="{{primary_tag.url}}">{{primary_tag.name}}</a>
                    </div>
                {{/if}}
                <div class="reading-time">
                    {{reading_time}}
                </div>
            </div>
        </div>
    </div>
</div>